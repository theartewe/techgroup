<%- content_for :page_stylesheet do %>
  <%= stylesheet_link_tag 'corporation', :media => 'screen' %>
<% end %>

<section class="corporation main">
  <%= render :partial => "header" %>
  <div class="content clear">
    <%= render "sidebar", :active_page=>"overview"  %>
    <section class="overview">
      <h2><%= t(:overview) %></h2>
      <div id="proverb"><%= t(:tall_oaks) %></div>
      <p class="opening-text">
        <%= t(:overview_text_p1) %> 
      </p>
      <p class="opening-text">
        <%= t(:overview_text_p2) %> 
      </p>
      <p>
        <%= t(:overview_text_p3) %> 
      </p>
      <p>
        <%= t(:overview_text_p4) %> 
      </p>
      <section class="missions clear">
        <section class="mission">
          <h3><%= t(:our_vision_header) %> </h3>
          <p><%= t(:our_vision_text) %> </p>
        </section>
        <section class="mission">
          <h3><%= t(:our_mission_header) %> </h3>
          <p><%= t(:our_mission_text) %> </p>
        </section>
      </section>
    </section>
    <section id="history-wrapper">
      <h3>Our History</h3>
      <section class="history-objects clear">
        <%= render :partial => 'history_object', 
          :collection => @objects, 
          :locals => {:history_object_count=>@objects.count-1} 
        %>
      </section>
    </section>
  </div>
</section>