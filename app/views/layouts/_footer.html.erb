<footer role="footer">
  <section class="footer-cta clear">
    <a href="" class="corporate-video-cta">
      <%= image_tag("footer_icon-corporate_video.svg", :alt=>"View") %>
      Tech Group Corporate Video
    </a>
    <a href="" class="business-brochure-cta">
      <%= image_tag("footer_icon-business_brochure.svg", :alt=>"View") %>
      Tech Group Business Brochure
    </a>
    <a href="<%= contact_path %>" class="contact-cta">
      <%= image_tag("footer_icon-contact.svg", :alt=>"View") %>
      Contact Tech Group Today
    </a>
  </section>
  <div class="container clear">
    <a href="<%= change_locale_path %>" title="<%= t(:switch_language) %>" class="switcher">
      <%= t(:switch_language) %>
    </a>
    <ul class="footer-nav">
      <li class="careers">
        <a href="<%= career_index_path %>" title="<%= t(:careers) %>" <% if @location == "careers" %>class="current"<% end %>>
          <%= t(:careers) %>
        </a>
      </li>
      <li class="terms_and_conditions">
        <a href="<%= terms_and_conditions_path %>" title="<%= t(:terms_and_conditions) %>" <% if @location == "terms_and_conditions" %>class="current"<% end %>>
          <%= t(:terms_and_conditions) %>
        </a>
      </li>
      <li class="privacy_policy">
        <a href="<%= privacy_policy_path %>" title="<%= t(:privacy_policy) %>"
           <% if @location == "privacy_policy" %>class="current"<% end %>>
          <%= t(:privacy_policy) %>
        </a>
      </li>
      <li class="feedback">
        <a href="<%= contact_path %>" title="<%= t(:feedback) %>" <% if @location == "feedback" %>class="current"<% end %>>
          <%= t(:feedback) %>
        </a>
      </li>
    </ul>
    <p class="copyright"><%= DateTime.current().strftime("%Y") %> Tech Group PJSC. All Rights Reserved.</p>
  </div>
</footer>