<aside class="sidebar">
  <div class="categories">
    <ul>
      <li class="active"><a href="<%= media_path %>" alt="View More Posts"><%= t(:all) %></a></li>
      <% @media_categories.each do |cat| %>
        <li>
          <a href="<%= category_media_path(cat) %>" alt="<%= t(:view_more_posts) %>">
            <%= cat.title %>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="search-wrapper">
    <form method="GET" action="<%= search_media_path %>">
      <fieldset>
        <input type="text" name="search" value="" id="search" placeholder="<%= t(:search_media) %>" />
        <input type="image" src="<%= image_path('sidebar-search_submit.svg')%>" />
      </fieldset>
    </form>
  </div>
</aside>