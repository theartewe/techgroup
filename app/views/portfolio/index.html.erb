<%- content_for :page_stylesheet do %>
  <%= stylesheet_link_tag 'portfolio', :media => 'screen' %>
<% end %>

<section class="portfolio main">
  <%= render :partial => "header" %>
  <div class="content clear">
    <%= render "sidebar", :active_page=>"overview" %>
    <section class="overview">
      <h2><%= t(:overview) %></h2>
      <h3><%= t(:portfolio_overview_text) %></h3>
      <section class="projects clear">
        <section class="project">
          <h3><%= t(:tech_group_projects_header) %></h3>
          <p><%= t(:tech_group_projects_text) %></p>
          <a href="<%= projects_portfolio_index_path(:locale=>I18n.locale) %>"><%= t(:more) %></a>
        </section>
        <section class="project">
          <h3><%= t(:tech_group_operations_header) %></h3>
          <p><%= t(:tech_group_operations_text) %></p>
          <a href="<%= operations_portfolio_index_path(:locale=>I18n.locale) %>"><%= t(:more) %></a>
        </section>
      </section>
    </section>
  </div>
</section>